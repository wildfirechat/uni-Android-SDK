<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:background="#60D9D9D9"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/muteView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/muteImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_audio_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="静音"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/videoImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_video_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="视频"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareScreenView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shareScreenImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_screensharing_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="共享屏幕"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/manageParticipantView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/manageParticipantImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_members" />

            <TextView
                android:id="@+id/manageParticipantTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="管理"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hangupView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hangupImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_end_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="结束"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>