<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.LightAppbar">
        <item name="colorPrimary">@color/gray5</item>
        <item name="colorPrimaryDark">@color/gray5</item>
        <item name="actionMenuTextColor">@color/gray15</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/black2</item>
        <item name="android:textColorPrimary">@color/black2</item>
    </style>

    <style name="AppTheme.DarkAppbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--全屏样式-->
    <style name="AppTheme.FullScreen">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--圆角Dialog-->

    <!--自定义CheckBox样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--实下滑线样式-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--选项条目样式-->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="IosSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="kswBackDrawable">@drawable/ios_back_drawable</item>
        <item name="kswBackMeasureRatio">1.5</item>
        <item name="kswThumbDrawable">@drawable/ios_thumb_selector</item>
        <item name="kswThumbMarginBottom">-8dp</item>
        <item name="kswThumbMarginLeft">-5dp</item>
        <item name="kswThumbMarginRight">-5dp</item>
        <item name="kswThumbMarginTop">-2dp</item>
    </style>

    <style name="deliveryProgress" parent="Widget.MaterialProgressBar.ProgressBar.Small">

    </style>

</resources>
